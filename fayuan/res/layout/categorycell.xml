<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="150dp"  
	android:layout_width="fill_parent"
	android:background="@drawable/ranks_view_cell_back"
	>
	
	<ImageView android:id="@+id/video_cover"   
		android:layout_width="180dp" android:layout_height="115dp"
		android:layout_marginTop="20dp" android:layout_marginLeft="16dp"
		android:src="@drawable/all_default_cover">
	</ImageView>
	
	<RatingBar android:id="@+id/star_Rating_Bar"  
		android:layout_width="wrap_content" android:isIndicator="false"  
		android:numStars="5" android:rating="4.5"  
		style="?android:attr/ratingBarStyleSmall" 
		android:layout_marginLeft="20dp" android:layout_marginTop="10dp" 
		android:layout_below="@+id/video_cover" android:layout_height="wrap_content"
		android:background="@drawable/ranks_view_cell_back"
		>   
	</RatingBar>
        
	<TextView android:id="@+id/star_score" 
		android:layout_width="60dp" android:layout_height="wrap_content"
		style="@style/text_16_white" android:layout_toRightOf="@+id/star_Rating_Bar"
		android:layout_marginTop="10dp"  android:layout_marginLeft="12dp" 
		android:text="@string/btn_caption_score" android:layout_below="@+id/video_cover"
	/>
	
	<ImageView android:id="@+id/btncategoryplay"   
		android:layout_width="43dp" android:layout_height="43dp"
		android:layout_marginTop="54dp" android:layout_marginLeft="16dp"
		android:layout_alignParentRight="true" android:layout_marginRight="18dp"
		android:background="@drawable/subject_play_button_xml">
	</ImageView>
	
	
	<TextView android:id="@+id/bottonm_line" 
		android:layout_width="fill_parent" android:layout_height="10dp"
		android:layout_marginTop="10dp" android:layout_below="@+id/star_score" 
		android:text="     " 
	/>
		
	<TextView android:id="@+id/video_name" 
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		style="@style/text_20_white" android:layout_toRightOf="@+id/video_cover"
		android:layout_marginTop="20dp" android:layout_marginLeft="15dp" 
		android:text="秦汉学术思想与文化" 
		/>
	<TextView android:id="@+id/key_speeker" 
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		style="@style/text_16_white" android:layout_toRightOf="@+id/video_cover"
		android:layout_marginTop="10dp" android:layout_marginLeft="16dp"  
		android:layout_marginRight="15dp" android:layout_toLeftOf="@+id/btncategoryplay"
		android:text="哲学" android:layout_below="@+id/video_name"
		android:singleLine="true" 
		/>
	<TextView android:id="@+id/cate_name" 
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		style="@style/text_16_white" android:layout_toRightOf="@+id/video_cover"
		android:layout_marginTop="5dp" android:layout_marginLeft="15dp"
		android:layout_marginRight="15dp"  
		android:text="" android:layout_below="@+id/key_speeker"
		android:singleLine="true" 
		/>
	<TextView android:id="@+id/video_detail" 
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		style="@style/text_16_white" android:layout_toRightOf="@+id/video_cover"
		android:layout_marginTop="5dp" android:layout_marginLeft="15dp" 
		android:layout_marginRight="15dp" android:layout_below="@+id/cate_name"
		android:text="" android:layout_toLeftOf="@+id/btncategoryplay"
		android:maxLines="6"  android:scrollbars="vertical" 
		android:singleLine="false" android:minLines="5"
		/>	
	<TextView android:id="@+id/video_playhint" 
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		style="@style/text_16_white" android:layout_toRightOf="@+id/video_detail"
		android:layout_marginTop="5dp" android:layout_marginLeft="16dp" 
		android:layout_below="@+id/btncategoryplay"
		android:text="@string/btn_caption_mustplay"  
	/>
		
</RelativeLayout> 
