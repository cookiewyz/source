<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:ssvideo="http://schemas.android.com/apk/res/com.chaoxing.video.fayuan"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  
	<ScrollView android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:fillViewport="true">
		<LinearLayout android:orientation="vertical" android:background="@drawable/all_view_background"
			android:layout_width="fill_parent" android:layout_height="fill_parent">

			<GridView android:id="@+id/pagevideolist" 
				android:layout_width="fill_parent" android:layout_height="fill_parent" 
				android:paddingLeft="8dp" android:paddingRight="8dp" android:numColumns="auto_fit"
				android:paddingBottom="6dp" android:background="@drawable/all_view_background" 
				android:columnWidth="150dp" android:verticalSpacing="10dp" android:horizontalSpacing="10dp" 
				android:persistentDrawingCache="all" android:layoutAnimation="@anim/layout_grid_fade"/>
		</LinearLayout>
	</ScrollView>		
</LinearLayout>
