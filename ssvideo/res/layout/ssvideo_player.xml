<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

	<RelativeLayout 
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:background="@android:color/black"
	>
    	<FrameLayout 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
		>
			<LinearLayout 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
			>
				<SurfaceView 
					android:id="@+id/video_sv_show_video"
					android:layout_width="640dp"
					android:layout_height="480dp"
					android:layout_gravity="center"
				/>
			</LinearLayout>
			<!-- android:background="@drawable/coners_radius_bg_xml" -->
			<LinearLayout 
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:orientation="vertical" android:layout_margin="15dp"
				android:layout_gravity="center" 
			>
				<ImageView 
					android:id="@+id/video_iv_wait" 
					android:layout_height="400dp"
					android:layout_width="600dp" 
					android:layout_gravity="center"
					android:scaleType="fitXY"
				/>
				<ProgressBar 
					android:id="@+id/video_pb_wait"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center|bottom"
				/>
			</LinearLayout>
			
		</FrameLayout>
	</RelativeLayout>
	
	<HorizontalScrollView 
		android:id="@+id/video_hScrollView_episode_buttons"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
   	 	android:layout_alignParentBottom="true"
   	 	android:scrollbars="none"
	>
		<LinearLayout 
			android:id="@+id/video_linearLayout_episode_buttons"
			android:orientation="horizontal"
	  	  	android:layout_width="fill_parent"
	   	 	android:layout_height="wrap_content"
	   	 	android:layout_alignParentBottom="true"
		>		
		</LinearLayout>
	
	</HorizontalScrollView>
	
	<RelativeLayout 
		android:id="@+id/video_relativeLayout_video_ctrl"
		android:layout_above="@id/video_hScrollView_episode_buttons"
		android:layout_width="fill_parent"
		android:layout_height="60dp"
		android:clickable="true"
	>
		<TextView 
			android:id="@+id/video_tv_time"
			android:layout_alignParentLeft="true"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:textSize="10dp"
			android:layout_marginLeft="20dp"
		/>
		<ImageButton 
			android:id="@+id/video_ib_play_pause"
			android:layout_centerInParent="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="#00000000"
		/>
		<SeekBar 
			android:id="@+id/video_sb_volume"
			android:layout_alignParentRight="true"
			android:layout_width="90dp"
 			android:maxHeight="6dp"  
		    android:minHeight="6dp"  
		    android:layout_marginRight="20dp"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:progressDrawable="@drawable/seekbar_volume_img"
  			android:thumb="@drawable/seekbar_volume_thumb"
			android:max="100"
			android:thumbOffset="0dip"
		/>
		<ImageButton 
			android:id="@+id/video_ib_volume_switch"
			android:layout_toLeftOf="@id/video_sb_volume"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="#00000000"
			android:layout_centerVertical="true"
			android:layout_marginRight="10dip"
		/>
	</RelativeLayout>
	<SeekBar
		android:id="@+id/video_sb_process_play"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:visibility="visible"
		android:maxHeight="6dp"
		android:minHeight="6dp"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginTop="15dp"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
		android:layout_above="@id/video_relativeLayout_video_ctrl"
		android:progressDrawable="@drawable/seekbar_process_img" 
		android:thumb="@drawable/seekbar_process_thumb" 
		android:thumbOffset="10dp"
	/>
	
	<RelativeLayout 
		android:id="@+id/video_relativeLayout_toolbar"
		android:layout_width="fill_parent"
		android:layout_height="40dp"
		android:background="@drawable/video_view_toolbar_back"
		android:gravity="center_vertical"
		android:layout_alignParentTop="true"
		android:clickable="true"
	>
		<TextView
			android:id="@+id/video_tv_video_name"
			android:layout_centerInParent="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			style="@style/text_16_white" 
			/>
		<Button 
			android:id="@+id/video_ib_video_detail_info"
			android:layout_alignParentRight="true"
			android:layout_width="75dp"
			android:layout_height="30dp"
			android:background="@drawable/all_black_button_xml"
			android:visibility="visible"
			android:layout_centerVertical="true"
			android:text="详细介绍"
			style="@style/text_18_white" 
		/>
		<Button 
			android:id="@+id/video_ib_download"
			android:layout_toLeftOf="@id/video_ib_video_detail_info"
			android:layout_width="55dp"
			android:layout_height="30dp"
			android:background="@drawable/all_black_button_xml"
			android:layout_centerVertical="true"
			android:text="下载"
			style="@style/text_18_white" 
		/>
	</RelativeLayout>
</RelativeLayout>
